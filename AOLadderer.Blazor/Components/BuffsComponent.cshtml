         onchange="@(e => { Model.Composites = CompositesBuff.Pay2Win; ModelChanged?.Invoke(Model); })" />
  <label class="form-check-label" for="buffs-config-composites-pay2win">Composites (Pay2Win)</label>
</div>

<hr class="border-secondary" />

