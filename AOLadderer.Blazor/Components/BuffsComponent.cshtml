@functions {
    [Parameter] BuffsModel Model { get; set; }
    [Parameter] Action<BuffsModel> ModelChanged { get; set; }
}

<div class="form-check">
  <input class="form-check-input" type="radio" name="buffs-config-composites" id="buffs-config-none"
         checked="@(!Model.Composites.HasValue)"
         onchange="@(e => { Model.Composites = null; ModelChanged?.Invoke(Model); })" />
  <label class="form-check-label" for="buffs-config-none">None</label>
</div>

<div class="form-check">
  <input class="form-check-input" type="radio" name="buffs-config-composites" id="buffs-config-composites"
         checked="@(Model.Composites == CompositesBuff.Standard)"
         onchange="@(e => { Model.Composites = CompositesBuff.Standard; ModelChanged?.Invoke(Model); })" />
  <label class="form-check-label" for="buffs-config-composites">Composites</label>
</div>

<div class="form-check">
  <input class="form-check-input" type="radio" name="buffs-config-composites" id="buffs-config-composites-pay2win"
