@code {
    [Parameter] public LadderModel Model { get; set; }
}

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th style="width: 1%;"></th>
      <th>QL</th>
      <th>Slot</th>
      <th>Shiny</th>
      <th>Bright</th>
      <th>Faded</th>
    </tr>
  </thead>

  <tbody>
    @foreach (var step in Model)
    {
      <tr class="@(step.IsChecked ? "text-secondary" : null)"
          @onclick="e => step.IsChecked = !step.IsChecked">
        <td><input type="checkbox" @bind="step.IsChecked" /></td>
        <td>@step.ImplantQL</td>
        <td>@step.ImplantSlot</td>
        <td>@step.ShinyStat</td>
        <td>@step.BrightStat</td>
        <td>@step.FadedStat</td>
      </tr>
    }
  </tbody>
</table>

